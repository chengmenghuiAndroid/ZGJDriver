<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.lty.zgj.driver.ui.activity.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:orientation="horizontal"
        android:background="@drawable/shape_toolbar">


        <ImageView
            android:id="@+id/tv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:padding="10px"
            android:src="@mipmap/nav_button_mine_default"/>



        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/tv_msg_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/shape_msg_dot"
                android:layout_marginLeft="42px"/>

            <ImageView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/nav_button_message_default"
                android:layout_marginRight="30px"
                android:padding="10px"/>
        </com.zhy.autolayout.AutoFrameLayout>


        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_1"
            android:layout_width="240px"
            android:layout_height="48dp"
            tl:tl_textAllCaps="true"
            tl:tl_textBold="BOTH"
            tl:tl_textsize="14sp"
            tl:tl_textSelectColor="@color/white"
            tl:tl_textUnselectColor="@color/text_unselect_color"
            tl:tl_tab_space_equal="true"
            tl:tl_indicator_width="36px"
            android:layout_centerHorizontal="true"
            />

    </com.zhy.autolayout.AutoRelativeLayout>


    <com.lty.zgj.driver.weight.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />


</com.zhy.autolayout.AutoLinearLayout>
