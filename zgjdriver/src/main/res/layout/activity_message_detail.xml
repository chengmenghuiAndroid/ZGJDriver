<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEEEEF8"
    android:orientation="vertical">

    <include layout="@layout/custom_layout"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_msg_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.06.28 17:40:40"
            android:textColor="#FF9FA7B3"
            android:textSize="24px"/>

        <TextView
            android:id="@+id/tv_msg_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="17:40:40"
            android:textColor="#FF9FA7B3"
            android:textSize="24px"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:background="@color/white">


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/au_al"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20px">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_type"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30px"
                android:src="@mipmap/pic_zgj"/>

            <TextView
                android:id="@+id/tv_msg_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFE1E0FB"
            android:layout_below="@id/au_al"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"/>


        <TextView
            android:id="@+id/tv_msg_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_marginBottom="20px"/>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>