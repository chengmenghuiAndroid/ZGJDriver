<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="570px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_back"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:gravity="left"
            android:text="这个是标题"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:text="这个是标题"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="40px"
            android:background="#DCE6F0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_text_selector_left"
                android:gravity="center"
                android:paddingBottom="23px"
                android:paddingTop="23px"
                android:text="取消"
                android:textColor="#353A41"
                android:textSize="17sp"/>

            <View
                android:id="@+id/dialog_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#DCE6F0"/>

            <TextView
                android:id="@+id/dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/back_text_selector_right"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/eline_main_color"
                android:paddingBottom="23px"
                android:paddingTop="23px"
                android:textSize="17sp"/>


        </LinearLayout>

    </LinearLayout>
    <!--08A8FF-->
</LinearLayout>
