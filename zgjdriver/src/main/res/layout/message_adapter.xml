<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <ImageView
        android:id="@+id/msg_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/msg_icon"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="坐公交官方"/>

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_title"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="通知:jnkklnknknknknknknknknknknkk"/>
    </com.zhy.autolayout.AutoLinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-12-12 12:12:11"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_item"
        android:layout_alignParentBottom="true"/>

</com.zhy.autolayout.AutoRelativeLayout>